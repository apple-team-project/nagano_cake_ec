<div class="container mt-4">
 <div class="row justify-content-center">
  <div class="col-md-10">
  <div class="text-left col-md-3" style="background-color: rgba(226,226,226,0.8); font-size: 1.4em; padding: 0 20px; margin-bottom: 20px;">
  注文履歴一覧
</div>
   <table class="table table-striped">
    <thead>
     <tr>
      <th style="background-color: rgba(226,226,226,0.8);">購入日時</th>
      <th style="background-color: rgba(226,226,226,0.8);">購入者</th>
      <th style="background-color: rgba(226,226,226,0.8);">注文個数</th>
      <th style="background-color: rgba(226,226,226,0.8);">注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
       <td>
        <%= link_to order.created_at.strftime('%Y-%m-%d %H:%M:%S'), admin_order_path(order), class: "text-decoration-none" %>
       </td>
        <td><%= order.customer.full_name %></td>
        <td><%= order.total_amount %></td> 
        <td><%= order.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
<%= paginate @orders %>
</div>
  </div>
 </div>
</div>
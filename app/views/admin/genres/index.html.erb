<div class="container-fluid col-md-12 mt-5">
<div class="row">
  <h4 class="col-2 text-left" style="background-color: #DDDDDD;">ジャンル一覧・追加</h4>
</div>
<div class="row col-md-10 mt-5">
 <%= render "form", genre: @genre %>
</div>


<table class="table col-md-3 mt-5">
  <tr>
    <th>ジャンル</th>
    <th></th>
  </tr>
  <% @genres.each do |genre| %>
  <tr>
    <td class="text-left"><%= genre.name %></td>
    <td class="text-right"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
  </tr>
  <% end %>
</table>
</div>
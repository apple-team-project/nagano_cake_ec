<%= form_with model: genre, 
              url: genre.new_record? ? admin_genres_path : admin_genre_path(genre), 
              method: genre.new_record? ? :post : :patch,
              local: true do |f| %>
  <%= f.label:name, "ジャンル名" %>
  <%= f.text_field:name, placeholder: "ジャンル名" %>
  <%= f.submit genre.new_record? ? "新規登録" : "変更を保存", class: "btn" %>
<% end %>
<div class="container">
<div class="row">
<div class="col">
<%=image_tag @item.get_item_image(300,300) %>
</div>
<div class="col">
<table>
<tr>
<td>商品名</td>
<td><%=@item.name %></td>
</tr>
<tr>
<td>商品説明</td>
<td><%=@item.description %></td>
</tr>
<tr>
<td>ジャンル</td>
<td><%=@genre.name %></td>
</tr>
<tr>
<td>税込価格<br>(税抜価格)</td>
<td><%=(@item.price*1.1).floor %>
<span>(</span><%=@item.price %><span>)円</span></td>
</tr>
<tr>
<td>販売ステータス</td>
<td><% if @item.is_active==true %>
販売中
<% else %>
販売停止中
<% end %></td>
</tr>
</table>
<%=link_to "編集する",edit_admin_item_path(@item),class: "btn" %>
</div>
</div>
</div>
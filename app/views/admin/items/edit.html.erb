<h4>商品編集</h4>
<%= form_with model: [:admin,@item] do |f| %>
  <%= f.label :item_image, "商品画像" %>
  <%= f.file_field :item_image, accept: "image/*" %>
  <%= f.label :name, "商品名" %>
  <%= f.text_field :name %>
  <%= f.label :description, "商品説明" %>
  <%= f.text_area :description %>
  <%= f.label :genre_id, "ジャンル" %>
  <%= f.select :genre_id, Genre.all.collect{|genre| [genre.name,genre.id]}, { selected: @item.genre_id } %>
  <%= f.label :price, "税抜価格" %>
  <%= f.text_field :price %>円
  <%= f.label :is_active, "販売ステータス" %>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active_true, "販売中" %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active_false, "販売停止中" %>
  <%= f.submit "変更を保存" %>
<% end %>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-5">
      <%= image_tag @item.get_item_image(250,250),style: 'width: 380px; height: 250px; object-fit: cover;' %>
    </div>
    <div class = "col-md-5">
      <h5 style="font-weight: bold;"><%= @item.name %></h5>
      <p><%= @item.description %></p>
      <p style="font-size: 1.2em" class="mt-5">¥<%= number_with_delimiter(@item.add_tax_price) %><span style="font-size: 13px;">(税込)</span></p>
      <div>
        <%= form_with model: @cart_item, url: cart_items_path, method: :post, local: true do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.select :amount, *[1..10], prompt: "個数選択" %>
          <%= f.submit 'カートに入れる', class: "btn btn-success",style: "margin-left: 30px;" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
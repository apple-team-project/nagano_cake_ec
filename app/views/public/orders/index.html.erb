<div class = "container mt-5">
  <div class="row">
    <h4 class = "col-2 text-center" style = "background-color: #DDDDDD;">注文履歴一覧</h4>
  </div>
</div> 

<div class="container-fluid mt-3 px-5">
  <div class="row">
    <table class="col table table-bordered">
      <thead>
        <tr>
          <th class="col-2" style="background-color: #DDDDDD;">注文日</th>
          <th class="col-4" style="background-color: #DDDDDD;">配送先</th>
          <th class="col-2" style="background-color: #DDDDDD;">注文商品</th>
          <th class="col-1" style="background-color: #DDDDDD;">支払金額</th>
          <th class="col-1" style="background-color: #DDDDDD;">ステータス</th>
          <th class="col-2" style="background-color: #DDDDDD;">注文詳細</th> 
        </tr>
      </thead> 
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class = "align-middle"><%= order.created_at.strftime("%Y年%m月%d日") %></td>
            <td class = "align-middle">
              〒<%= order.post_code %><br> 
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td class = "align-middle">
              <% order.items.each do |item| %>
                <%= item.name %><br>
              <% end %>
            </td>
            <td class = "align-middle"><%= number_to_currency(order.total_price, unit: "円", format: "%n%u") %></td>
            <td class = "align-middle"><%= order.status_i18n %></td>
            <td class = "align-middle text-center"><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table> 
  </div>
</div>
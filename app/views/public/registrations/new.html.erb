<h2>新規会員登録</h2>

<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


  <div class="field">
  <%= f.label :full_name,"名前" %>
  (姓)<%= f.text_field :family_name, autofocus: true,placeholder: "令和" %>
  (名)<%=f.text_field :first_name,placeholder: "道子" %>
  </div>

  <div class="field">
  <%= f.label :full_name_kana,"フリガナ" %>
  (セイ)<%= f.text_field :family_name_kana,placeholder: "レイワ" %>
  (メイ)<%=f.text_field :first_name_kana,placeholder: "ミチコ" %>
  </div>

  <div class="field">
    <%= f.label :email,"メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email",placeholder: "sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label :post_code,"郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :post_code, placeholder: "0000000" %>
  </div>
  
  <div class="field">
    <%= f.label :address,"住所" %><br />
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>


  <div class="field">
    <%= f.label :phone_number,"電話番号(ハイフンなし)" %><br />
    <%= f.text_field :phone_number, placeholder: "0000000000" %>
  </div>


  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

<div class="container">
  <div class="row">
    <div class="col">
      ショッピングカート
    </div>
    <div class="col">
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込み)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_item_image(50,50) %> <%= cart_item.item.name %>
          </td>
          <td><%= number_with_delimiter(cart_item.item.add_tax_price) %></td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, local: true do |f| %>
              <%= f.select :amount, *[1..10], class: "form-control" %>
              <%= f.submit '変更', class: "btn btn-success" %>
            <% end %>
          </td>
          <td><%= number_with_delimiter(cart_item.subtotal) %></td>
          <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody> 
  </table>
  <div class="row">
    <div class="col">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    <table class="table table-bordered">
      <tr>
        <th>合計金額</th>
        <td><%= number_with_delimiter(@cart_items.sum(&:subtotal)) %></td>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div> 
</div>
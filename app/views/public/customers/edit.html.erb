<div class = "container mb-5 mt-5">
  <div class = "row">
    <h4 class = "col-2 text-center offset-2" style = "background-color: #DDDDDD;">会員情報編集</h4>
  </div>
</div>

<%= form_with(model: @customer, url: information_customers_path, method: :patch, local: true) do |f| %>

  <div class="container mb-3">
    <div class="row d-flex align-items-center" style = "height: 100%;">
      <div class = "col-2 offset-1">
        氏名
      </div>
      <div class = "col-3">
        <%= f.text_field :family_name, class: "form-control", required: true %>
      </div>
      <div class = "col-3 offset-right-3">
        <%= f.text_field :first_name, class: "form-control", required: true %>
      </div> 
    </div>
  </div>
  
  <div class="container mb-3">
    <div class="row d-flex align-items-center" style="height: 100%;">
      <div class="col-2 offset-1">
        フリガナ
      </div>
      <div class="col-3">
        <%= f.text_field :family_name_kana, class: "form-control", required: true %>
      </div>
      <div class="col-3 offset-right-3">
        <%= f.text_field :first_name_kana, class: "form-control", required: true %>
      </div>
    </div>
  </div>

  <div class="container mb-3">
    <div class="row d-flex align-items-center" style="height: 100%;">
      <div class="col-2 offset-1">
        郵便番号
      </div>
      <div class="col-3 offset-right-6">
        <%= f.text_field :post_code, class: "form-control", required: true %>
      </div>
    </div>
  </div>

  <div class="container mb-3">
    <div class="row d-flex align-items-center" style="height: 100%;">
      <div class="col-2 offset-1">
        住所
      </div>
      <div class="col-9">
        <%= f.text_field :address, class: "form-control", required: true %>
      </div>
    </div>
  </div>

  <div class="container mb-3">
    <div class="row d-flex align-items-center" style="height: 100%;">
      <div class="col-2 offset-1">
        電話番号
      </div>
      <div class="col-3 offset-right-6">
        <%= f.text_field :phone_number, class: "form-control", required: true %>
      </div>
    </div>
  </div>

  <div class="container mb-5">
    <div class="row d-flex align-items-center" style="height: 100%;">
      <div class="col-2 offset-1">
        メールアドレス
      </div>
      <div class="col-3 offset-right-6">
        <%= f.email_field :email, class: "form-control", required: true %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row d-flex">
      <div class="col-4 offset-3">
        <%= f.submit "変更内容を保存", class: "btn btn-success w-100" %>
      </div>
      <div class="col-2 offset-2">
        <%= link_to "退会する", confirm_leave_customers_path, class: "btn btn-danger" %>
      </div>
    </div>
  </div>

<% end %>
<h3>会員情報編集</h3>

<%= form_with(model: @customer, url: registration_path(@customer), method: :put, local: true) do |f| %>
  <div class="form-group">
    <p>氏名</p>
    <%= f.text_field :family_name, class: "form-control", required: true %>
    <%= f.text_field :first_name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <p>フリガナ</p>
    <%= f.text_field :family_name_kana, class: "form-control", required: true %>
    <%= f.text_field :first_name_kana, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :post_code, "郵便番号" %>
    <%= f.text_field :post_code, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :address, "住所" %>
    <%= f.text_area :address, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, "電話番号" %>
    <%= f.text_field :phone_number, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "変更内容を保存", class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to "退会する", confirm_leave_customers_path, class: "btn btn-danger" %>